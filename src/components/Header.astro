---
import Navbar from './Navbar.astro'
---

<header
  class='fixed top-0 left-0 z-50 w-full flex justify-between lg:justify-center items-center bg-white lg:bg-opacity-90 p-4 gap-8 backdrop-filter backdrop-saturate-100 backdrop-blur-sm'
>
  <!-- hamburger icon -->
  <button id='hamburger' class='lg:hidden cursor-pointer w-7'>
    <img src='/icons/hamburger.svg' alt='hamburger menu' />
  </button>

  <!-- boat icon -->
  <a href='#hero'>
    <img class='w-9' src='/icons/barquito.svg' alt='barquito' />
  </a>

  <!-- nav -->
  <Navbar />

  <!-- fb icon -->
  <a href='https://www.facebook.com/chimboteros/' target='_blank'>
    <img class='w-7' src='/icons/fb.svg' alt='fb circular logo' />
  </a>
</header>

<script>
  const hamburger = document.querySelector('#hamburger')!
  const menu = document.querySelector('#menu')!

  hamburger.addEventListener('click', () => {
    if (menu.classList.contains('h-0')) {
      menu.classList.remove('h-0')
      menu.classList.add('h-auto')
    } else {
      menu.classList.remove('h-auto')
      menu.classList.add('h-0')
    }
  })
</script>
