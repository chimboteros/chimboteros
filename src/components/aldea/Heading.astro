---
export interface Props {
  title: string
  subtitle: string
  description?: string
}

const { title, subtitle, description } = Astro.props as Props
---

<h2
  class='text-3xl md:text-[2.2rem] lg:text-[4rem] font-medium md:mb-1 lg:mb-7'
>
  {title}
</h2>
<em
  class='text-lg md:text-xl lg:text-[2rem] mb-3 lg:mb-7 inline-block text-[#7B7B7B] lg:text-inherit'
  >{subtitle}
</em>
{description && <p class='text-base md:text-lg lg:text-2xl'>{description}</p>}
