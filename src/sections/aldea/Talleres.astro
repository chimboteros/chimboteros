---
import Heading from '@/components/aldea/Heading.astro'

const workshops = [
  'La arquitectura y el branding emocional',
  'La arquitectura y la gestión cultural',
  'La arquitectura y el turismo sostenible'
]
---

<section id='talleres' class='grid lg:grid-cols-2 border-t lg:border-t-0'>
  <div class='relative order-1 lg:order-none'>
    <img src='/images/aldea/estatuas.jpg' alt='estatuas de niñas danzando' />
    <small class='absolute bottom-4 left-5 text-xs text-[#eee]'>
      Escultura en el <br /> bulevar Isla Blanca <br /> David Aguedo / Fotear
    </small>
  </div>

  <div class='relative py-14 px-10'>
    <div
      class='w-[30rem] max-w-fit lg:max-w-full mx-auto lg:absolute-center md:text-center lg:text-left'
    >
      <div class='text-center lg:text-left mb-10'>
        <Heading
          title='Talleres'
          subtitle='Currícula creativa'
          description='Capacitaciones en áreas complementarias a la técnica arquitectónica orientadas al desarrollo cultural y turístico:'
        />
      </div>

      <ol class='w-full flex flex-col gap-8'>
        {
          workshops.map((workshop, index) => (
            <li>
              <h3 class='capitalize text-lg lg:text-xl font-medium mb-1'>
                {`${index + 1}) Taller 0${index + 1}:`}
              </h3>
              <p class='text-base lg:text-lg'>{workshop}</p>
            </li>
          ))
        }
      </ol>
    </div>
  </div>
</section>
