---
const features = [
  {
    name: 'visión',
    description: 'Chimbote como una marca turística global.'
  },
  {
    name: 'misión',
    description:
      'Contribuir a la transformación de nuestros patrimonios, mediante la arquitectura cultural, en edificaciones con identidad'
  },
  {
    name: 'valores',
    description: 'Bien común, innovación y calidad.'
  }
]
---

<section id='propósito' class='grid lg:grid-cols-2 border-t lg:border-t-0'>
  <div class='relative p-8 text-[#1A1A1A]'>
    <div
      class='w-[30rem] max-w-fit lg:max-w-full mx-auto lg:absolute-center md:text-center lg:text-left'
    >
      <div class='mb-10'>
        <h2 class='text-2xl lg:text-5xl font-medium mb-1'>Propósito</h2>
        <em class='text-lg lg:text-2xl'>Arquitectura Cultural</em>
      </div>

      <ul class='w-full flex flex-col gap-10'>
        {
          features.map(({ name, description }) => (
            <li>
              <h3 class='capitalize text-lg lg:text-2xl font-medium mb-1'>
                {name}
              </h3>
              <p class='text-base lg:text-lg'>{description}</p>
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <div class='relative'>
    <img src='/images/aldea/casa.jpg' alt='casa en la caleta - chimbote' />
    <small class='w-[7rem] absolute bottom-2 left-5 text-xs'>
      Las Casonas de la Corporación Peruana del Santa, Chimbote <br /> Luis Mariños
      / Fotear
    </small>
  </div>
</section>
