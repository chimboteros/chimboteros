---
import Heading from '@/components/aldea/Heading.astro'

const routes = [
  {
    name: 'Urbana',
    description:
      'Unir y dotar a las calles, plazas, lugares y edificaciones urbanas con identidad cultural y potencial turístico.',
    textColor: 'text-[#FEB109]'
  },
  {
    name: 'Creativa',
    description:
      'Plasmar a los personajes destacados de nuestra provincia, con sus historias y valores creativos, para culturizar a la ciudadanía.',
    textColor: 'text-[#60B122]'
  },
  {
    name: 'Histórica',
    description:
      'Articular y conceptualizar la historia y la cultura de los sitios que constituyen patrimonio cultural de la provincia del Santa.',
    textColor: 'text-[#833014]'
  },
  {
    name: 'Ancestral',
    description:
      'Rescatar la riqueza artística y constructiva de los sitios arqueológicos para su aplicación en las construccciones urbanas.',
    textColor: 'text-[#ED640D]'
  }
]
---

<section id='rutas' class='grid lg:grid-cols-2 border-t lg:border-t-0'>
  <div class='relative py-14 px-10'>
    <div
      class='w-[35rem] max-w-fit lg:max-w-full mx-auto lg:absolute-center md:text-center lg:text-left'
    >
      <div class='text-center lg:text-left mb-10 lg:mb-8'>
        <Heading
          title='Rutas Culturales'
          subtitle='La Red Chimbote'
          description='Rutas con atractivos asociados a ser subidas a la Red Chimbote.'
        />
      </div>

      <ul class='w-full flex flex-col gap-5'>
        {
          routes.map(({ name, description, textColor }) => (
            <li>
              <h3 class={`${textColor} text-lg font-medium mb-1`}>
                #LaRuta{name}
              </h3>
              <p class='text-base lg:text-lg'>{description}</p>
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <div class='relative'>
    <img
      src='/images/aldea/estacion-del-ferrocarril.jpg'
      alt='estación del ferrocarril de chimbote'
    />
    <small class='absolute bottom-4 left-5 text-xs text-[#eee]'>
      Segunda nave <br /> de la antigua Estación <br /> del Ferrocarril, <br /> Joan
      Gavelán / Fotear
    </small>
  </div>
</section>
