---
import Footer from '@/components/Footer.astro'
---

<section
  id='contacto'
  class='py-28 px-6 lg:px-0 min-h-screen bg-[url(/images/mobile/atardecer-en-la-bahia-de-chimbote.jpg)] lg:bg-[url(/images/puerto-de-chimbote.jpg)] relative bg-cover bg-center'
>
  <div class='relative max-w-[30rem] mx-auto text-white lg:text-[#333]'>
    <div class='text-center mb-10'>
      <h2 class='text-4xl lg:text-7xl font-medium'>Hola!</h2>
      <em class='text-lg lg:text-3xl'>Consultas y sugerencias</em>
    </div>

    <form
      name='contact'
      method='POST'
      data-netlify='true'
      class='relative lg:static top-48 lg:top-0 w-10/12 mx-auto grid lg:grid-cols-2 lg:gap-x-8 gap-y-2 lg:gap-y-4'
    >
      <div>
        <label for='fullName' class='form-label'>Nombres:</label>
        <input
          type='text'
          id='fullName'
          name='fullName'
          class='form-input'
          required
        />
      </div>

      <div>
        <label for='email' class='form-label'>Correo:</label>
        <input
          type='email'
          id='email'
          name='email'
          class='form-input'
          required
        />
      </div>

      <div class='lg:col-span-2 [&>textarea]:rounded-2xl'>
        <label for='message' class='form-label'>Mensaje:</label>
        <textarea
          id='message'
          name='message'
          cols='30'
          rows='3'
          class='form-input'
          required></textarea>
      </div>

      <button
        type='submit'
        class='bg-white text-[#333] lg:bg-[#333] lg:text-white max-w-min mx-auto py-1 lg:py-2 px-7 rounded-full lg:text-lg lg:col-span-2 mt-4'
        >Enviar</button
      >
    </form>
  </div>

  <Footer />
</section>
